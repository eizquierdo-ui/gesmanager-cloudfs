/* src/pages/Home.css */

.home-layout {
  display: flex;
  height: 100vh;
  width: 100vw;
  background-color: #f4f7f9; /* Un fondo muy suave para el área de contenido */
}

.main-content {
  flex-grow: 1; /* ¡Esta es la clave! Hace que este contenedor crezca para llenar el espacio */
  padding: 20px;
  overflow-y: auto; /* Permite scroll si el contenido es más alto que la pantalla */
}
